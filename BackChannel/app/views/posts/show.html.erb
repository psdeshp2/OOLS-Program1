<p id="notice"><%= notice %></p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  Comments :
  <%= Comment.find_all_by_post_id(@post.id) %>
</p>

<td>Number of Votes:
  <%= no_of_votes = Vote.count_by_sql("select count(*) from votes where post_id='" +@post.id.to_s + "'")
      no_of_votes.to_s
  %>
</td>

<br>

<!-- Vote for the post -->
<%= link_to 'Vote', :controller => "votes", :action => "new", :post_id => @post.id %>

<!-- Comment on the post -->
<%= link_to 'Comment', :controller => "comments", :action => "new", :post_id => @post.id %>


<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>
