<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= select("post", "category_id", Category.find(:all).collect{ |c| [ c.name, c.id] }) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

    <p>
      <%= link_to "Show all posts", posts_path %>
    </p>

<% end %>
